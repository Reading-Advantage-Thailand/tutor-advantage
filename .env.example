# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development" # or "production"

# Database (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/tutor_advantage?schema=public"
DATABASE_CONNECTION_LIMIT="20" # Maximum number of database connections

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key" # Generate with: openssl rand -base64 32

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_CLIENT_ID="your-facebook-client-id" # Optional: For Facebook login
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret" # Optional: For Facebook login

# Payments (Stripe)
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
NEXT_PUBLIC_STRIPE_PRICING_TABLE_ID="prctbl_your_pricing_table_id"

# AI Integration (OpenAI)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORGANIZATION_ID="your-openai-org-id" # Optional
AI_MODEL_NAME="gpt-4" # Specify which model to use

# Internationalization (next-intl)
DEFAULT_LOCALE="en" # Default language
SUPPORTED_LOCALES="en,th" # Comma-separated list of supported locales

# Email Service (For notifications and marketing)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-smtp-username"
EMAIL_SERVER_PASSWORD="your-smtp-password"
EMAIL_FROM="noreply@your-domain.com"

# Rate Limiting
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"
RATE_LIMIT_REQUESTS="100" # Requests per window
RATE_LIMIT_WINDOW="60" # Window size in seconds

# Security
CSRF_SECRET="your-csrf-secret" # Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-encryption-key" # For sensitive data encryption
COOKIE_SECRET="your-cookie-secret" # For cookie signing

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
GA_MEASUREMENT_ID="G-XXXXXXXXXX" # Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX" # Public GA4 ID

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_CLOUD_STORAGE_BUCKET="your-storage-bucket-name"
GOOGLE_CLOUD_CREDENTIALS="base64-encoded-service-account-key" # Base64 encoded service account key

# Content Delivery
CDN_URL="https://your-cdn.com" # Optional: CDN endpoint
ASSET_PREFIX="https://your-cdn.com" # Optional: Asset serving prefix

# Feature Flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES="false"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Note: Replace all placeholder values with your actual configuration.
# Never commit the actual .env file to version control.
# Make sure to set up proper values in your deployment environment.

# Development Tools
DEBUG="false" # Enable detailed logging
DEVELOPMENT_TOOLS="false" # Enable development-only features

# Cache Configuration
CACHE_TTL="3600" # Cache time-to-live in seconds
REDIS_CACHE_URL="redis://localhost:6379" # Optional: Redis cache URL

# MLM System Configuration
MLM_MAX_DEPTH="5" # Maximum depth of MLM network
MLM_COMMISSION_RATES="0.1,0.05,0.025" # Commission rates for each level
